




<script>
    addEventListener("DOMContentLoaded",()=>{
        const config = {
            method: "POST",
            headers: {
                'Content-Type': 'application/json',
            }
        }
        fetch("/vip/list", config).then(r=>{r.json().then(corpo=>{
            console.log(corpo.vips[0])
            for(i = 0; i < corpo.vips.length; i++){
                let tipoVip = corpo.vips[i].tipo 
                let valorVip = corpo.vips[i].valor
                const divMae = document.querySelector(".vip-coin")
                const bloco = document.createElement("blockquote")
                const ul = document.createElement("ul")
                const li = document.createElement("li")
                const li2 = document.createElement("li")
                const imagem = document.createElement("img")
                divMae.appendChild(bloco)
                bloco.appendChild(ul)
                ul.appendChild(li)
                ul.appendChild(li2)
                li.innerHTML = `${corpo.vips[i].tipo}`
                li2.innerHTML = `${corpo.vips[i].valor}`
                li2.appendChild(imagem)
                imagem.src = "/assets/coin.png"
            }
        })})
    })
</script>

